{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Vimix",
  "version": "0.7.2",
  "identifier": "com.vimix.app",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Vimix",
        "width": 1024,
        "height": 720,
        "minWidth": 480,
        "minHeight": 600,
        "center": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "externalBin": [
      "binaries/Vimix-processor"
    ],
    "resources": [
      "resources/ffmpeg*",
      "resources/ffprobe*",
      "resources/img2webp*"
    ],
    "macOS": {
      "entitlements": "entitlements.plist"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU4MTkwQkQ0REMwQjhFMjgKUldRb2pndmMxQXNaV04rNnQrRlBIQi9aek9hdExoSDBTeUlBcG1nc0NjV2Q0b3R3RjVhVFgyUEcK",
      "endpoints": [
        "https://github.com/kike1303/vimix/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
