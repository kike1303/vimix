{
  "name": "vimix",
  "version": "0.4.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:api": "cd services/processor && uvicorn app.main:app --reload --port 8787",
    "dev:mcp": "cd services/mcp && ./venv/bin/python server.py",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:api\" \"pnpm dev:mcp\"",
    "build": "pnpm --filter web build",
    "preview": "pnpm --filter web preview",
    "tauri:dev": "pnpm --filter web tauri dev",
    "tauri:build": "bash scripts/build-sidecar.sh && pnpm --filter web tauri build",
    "tauri:sidecar": "bash scripts/build-sidecar.sh"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
